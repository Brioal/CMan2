<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <!--标题-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@color/colorAccent"
        android:drawableRight="@mipmap/ic_device_info_open"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:text="性格设定"
        android:textColor="@android:color/white"
        android:textSize="22sp"/>
    <!--性格设置提示-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="选择不同的性格来调节CMAN的话语频率"
        android:textColor="@color/colorTv_deviceName_black"
        android:textSize="16sp"/>
    <!--性格选项-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="30dp">

        <RadioButton
            android:checked="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/personal_btn_bg"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:button="@null"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="神唠叨"
            android:textColor="@drawable/personal_btn_color"
            android:textSize="19sp"/>
        <RadioButton
            android:checked="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/personal_btn_bg"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:button="@null"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="神唠叨"
            android:textColor="@drawable/personal_btn_color"
            android:textSize="19sp"/>
        <RadioButton
            android:checked="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/personal_btn_bg"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:button="@null"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="神唠叨"
            android:textColor="@drawable/personal_btn_color"
            android:textSize="19sp"/>


    </RadioGroup>

</LinearLayout>