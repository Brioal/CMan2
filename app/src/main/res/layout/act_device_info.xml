<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgWhite"
    android:orientation="vertical"
    tools:context="com.brioal.cman2.deviceinfo.DeviceInfoActivity">
    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">

        <TextView
            style="@style/CMTheme.TitleTv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="C-MAN信息"/>

        <ImageButton
            android:id="@+id/change_pass_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_black"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_device_info_open"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:text="称呼设定"
                android:textColor="@color/colorTv_deviceName_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_device_info_open"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:text="性格设定"
                android:textColor="@color/colorTv_deviceName_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_device_info_open"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:text="身体健康状况"
                android:textColor="@color/colorTv_deviceName_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_device_info_open"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:text="工作时长"
                android:textColor="@color/colorTv_deviceName_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/ic_device_info_open"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:text="成果反馈"
                android:textColor="@color/colorTv_deviceName_black"
                android:textSize="22sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
